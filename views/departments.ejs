<style>
    table,
    th,
    td {border: 1px solid black;}
</style>
<h2>Departments</h2>
<table>
<tr>
    <th>DID</th>
    <th>Name</th>
    <th>Budget</th>
    <th>Location</th>
    <th>Delete</th>
</tr>
<% departments.forEach((departments)=> { %>
    <tr>
        <td>
            <%= departments.did %>
        </td>
        <td>
            <%= departments.dname %>
        </td>
        <td>
            <%= departments.budget %>
        </td>
        <td>
            <%= departments.lid %>
        </td>
        <td>
            <!-- Uses the selected rows department id to start the deletion process -->
            <a href="http://localhost:4001/depts/delete/<%= departments.did %>">Delete</a>
        </td>
    </tr>
    <% }) %>
</table>
<h3><a href="http://localhost:4001/">Home</a></h3>